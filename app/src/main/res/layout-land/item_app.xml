<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="app"
            type="com.example.storechat.model.AppInfo" />
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:paddingVertical="6dp">

        <!-- 左侧 APK 图标 -->
        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_apk_green"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 文本区域 -->
        <LinearLayout
            android:id="@+id/contentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            app:layout_constraintEnd_toStartOf="@id/btnAction"
            app:layout_constraintTop_toTopOf="@id/ivIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivIcon">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{app.name}'
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                tools:text="应用名称" />

            <TextView
                android:id="@+id/tvMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text='@{"下 " + app.downloadCount + "   文件大小" + app.size}'
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif"
                tools:text="下 1002   文件大小 83MB" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text='@{app.description}'
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                tools:text="应用简介说明应用简介说明应用简介说明..." />
        </LinearLayout>

        <!-- 右侧操作按钮（安装 / 升级 / 打开） -->
        <Button
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="80dp"
            android:layout_marginEnd="4dp"
            android:text='@{app.buttonText}'
            android:textSize="10sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:onClick="@{clickListener}"
            android:background="@drawable/bg_btn_action"
            android:textColor="@android:color/white"
            android:enabled='@{app.buttonEnabled}'
            android:visibility="@{app.showProgress ? View.INVISIBLE : View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivIcon" />

        <!-- ★ 下载进度胶囊（设计图样式） -->
        <FrameLayout
            android:id="@+id/layoutProgress"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_home_progress_capsule"
            android:onClick="@{clickListener}"
            android:clickable="true"
            android:focusable="true"
            android:visibility='@{app.showProgress ? View.VISIBLE : View.GONE}'
            app:layout_constraintStart_toStartOf="@id/btnAction"
            app:layout_constraintEnd_toEndOf="@id/btnAction"
            app:layout_constraintTop_toTopOf="@id/ivIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivIcon"
            tools:visibility="visible">

            <!-- 进度填充（浅蓝色从左到右） -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress='@{app.progress}'
                android:indeterminate="false"
                android:progressDrawable="@drawable/bg_home_progress_bar"
                android:background="@android:color/transparent" />

            <!-- 居中文字：16.3% / 继续 / 验证中 / 安装中 -->
            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text='@{app.progressText}'
                android:textSize="13sp"
                android:textColor="@color/blue_action"
                tools:text="16.3%" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
