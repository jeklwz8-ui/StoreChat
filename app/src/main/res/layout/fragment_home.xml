<?xml version="1.0" encoding="utf-8"?>
<!-- 应用主页 HomeFragment 的布局文件 -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 绑定的 ViewModel，用于提供数据和处理业务逻辑 -->
        <variable
            name="viewModel"
            type="com.example.storechat.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/store_bg"
        tools:context=".ui.home.HomeFragment">

        <!-- ★ 顶部搜索条 -->
        <FrameLayout
            android:id="@+id/cardSearch"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_search_height"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginEnd="@dimen/common_margin"
            android:layout_marginTop="@dimen/home_search_top_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 使用 ConstraintLayout 替代 LinearLayout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 左侧 Logo -->
                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_store_logo"
                    android:contentDescription="@null"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- 右侧下载管理 -->
                <ImageView
                    android:id="@+id/ivDownloadManager"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_download"
                    android:contentDescription="@null"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 中间搜索框 -->
                <ImageView
                    android:id="@+id/ivSearch"
                    android:layout_width="0dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_search"
                    android:contentDescription="@null"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivLogo"
                app:layout_constraintEnd_toStartOf="@id/ivDownloadManager" /> <!-- 关键：结束于 ivDownloadManager 的左侧 -->

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>


        <!-- ★ 中间内容卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginEnd="@dimen/common_margin"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="0dp"
            android:background="@android:color/white"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardUseCompatPadding="true"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/cardSearch"
            app:layout_constraintBottom_toTopOf="@id/tvVersion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 分类标签栏 -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayoutCategories"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/blue_action"
                    app:tabIndicatorFullWidth="false"
                    app:tabIndicatorHeight="@dimen/home_tab_indicator_height"
                    app:tabMaxWidth="0dp"
                    app:tabMinWidth="0dp"
                    app:tabMode="fixed"
                    app:tabRippleColor="@android:color/transparent"
                    app:tabSelectedTextColor="@color/blue_action"
                    app:tabTextColor="@color/text_secondary" />

                <!-- 应用列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAppList"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/white"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/common_half_margin"
                    android:paddingEnd="@dimen/common_half_margin"
                    android:paddingBottom="@dimen/common_half_margin"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tabLayoutCategories"
                    app:layout_constraintVertical_bias="1.0"
                    tools:listitem="@layout/item_app" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- ★ 底部版本号 -->
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginBottom="@dimen/common_half_margin"
            android:text='@{"版本号：" + viewModel.appVersion}'
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="版本号：V1.0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
