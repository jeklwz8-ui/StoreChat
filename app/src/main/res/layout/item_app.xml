<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="app"
            type="com.example.storechat.model.AppInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:paddingVertical="6dp">

        <!-- 左侧 APK 图标 -->
        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_apk_green"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 文本区域 -->
        <LinearLayout
            android:id="@+id/contentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            app:layout_constraintEnd_toStartOf="@id/btnAction"
            app:layout_constraintTop_toTopOf="@id/ivIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivIcon">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{app.name}'
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="应用名称" />

            <TextView
                android:id="@+id/tvMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text='@{"下 " + app.downloadCount + "   文件大小" + app.size}'
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                tools:text="下 1002   文件大小 83MB" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text='@{app.description}'
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="应用简介说明应用简介说明应用简介说明..." />
        </LinearLayout>

        <!-- 右侧按钮 -->
        <Button
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="72dp"
            android:layout_marginEnd="4dp"
            android:text='@{app.buttonText}'
            android:textSize="11sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:background="@drawable/bg_btn_action"
            android:textColor="@color/bt_home"
            android:enabled='@{app.buttonEnabled}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivIcon" />

        <!-- 下载进度块 -->
        <LinearLayout
            android:id="@+id/layoutProgress"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_btn_progress"
            android:gravity="center"
            android:visibility='@{app.showProgress ? View.VISIBLE : View.GONE}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivIcon"
            tools:visibility="gone">

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{app.progressText}'
                android:textSize="13sp"
                android:textColor="@color/bt_home"
                tools:text="16.3%" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
