<!-- 定义资源文件根节点，引入tools命名空间用于设计时属性 -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. 基础应用主题 -->
    <!-- 继承Material3的日夜间模式无ActionBar主题 -->


    <style name="Base.Theme.StoreChat" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. 在此处自定义浅色主题 -->

        <!-- For API level 23 and above, this makes status bar icons dark. 设置主页按钮颜色-->
        <item name="colorPrimary">@color/royal_blue</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/white</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <!-- <item name="colorPrimary">@color/my_light_primary</item> 示例：设置主色调 -->
    </style>

    <!-- 应用主主题，继承自Base.Theme.StoreChat -->
    <style name="Theme.StoreChat" parent="Base.Theme.StoreChat" />

    <!-- 新增：详情页 Meta 样式 -->
    <!-- 定义详情页元数据项的样式 -->
    <style name="DetailMetaItem">
        <!-- 设置宽度为0dp，用于权重分配 -->
        <item name="android:layout_width">0dp</item>
        <!-- 设置高度根据内容自适应 -->
        <item name="android:layout_height">wrap_content</item>
        <!-- 设置权重为1，使元素在LinearLayout中均分空间 -->
        <item name="android:layout_weight">1</item>
        <!-- 设置内容居中对齐 -->
        <item name="android:gravity">center</item>
        <!-- 设置文本颜色为主文本颜色 -->
        <item name="android:textColor">@color/text_primary</item>
        <!-- 设置文本大小为14sp -->
        <item name="android:textSize">14sp</item>
        <!-- 设置文本样式为粗体 -->
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 定义详情页元数据标签的样式 -->
    <style name="DetailMetaLabel">
        <!-- 设置宽度为0dp，用于权重分配 -->
        <item name="android:layout_width">0dp</item>
        <!-- 设置高度根据内容自适应 -->
        <item name="android:layout_height">wrap_content</item>
        <!-- 设置顶部外边距为4dp -->
        <item name="android:layout_marginTop">4dp</item>
        <!-- 设置权重为1，使元素在LinearLayout中均分空间 -->
        <item name="android:layout_weight">1</item>
        <!-- 设置内容居中对齐 -->
        <item name="android:gravity">center</item>
        <!-- 设置文本颜色为次要文本颜色 -->
        <item name="android:textColor">@color/text_secondary</item>
        <!-- 设置文本大小为11sp -->
        <item name="android:textSize">11sp</item>
    </style>
</resources>